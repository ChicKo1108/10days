.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* --- 固定头部 --- */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: var(--paper-bg); /* 遮挡下方滚动内容 */
  padding-top: env(safe-area-inset-top);
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05); /* 微弱阴影 */
  /* 确保纹理背景也存在 */
  background-image: var(--paper-texture); 
}

.header-content {
  padding: 20rpx 40rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.date {
  font-size: 24rpx;
  margin-bottom: 8rpx;
  letter-spacing: 2rpx;
}

.title {
  font-size: 56rpx;
  color: var(--ink-black);
  margin-bottom: 16rpx;
}

.ink-line {
  width: 60rpx;
  height: 6rpx;
  background-color: var(--cinnabar-red);
  border-radius: 4rpx;
  opacity: 0.9;
}

/* --- 滚动内容区 --- */
.content {
  flex: 1;
  padding: 0 40rpx;
  box-sizing: border-box;
  /* 关键：为固定头部留出空间，高度需根据实际调整 */
  padding-top: calc(env(safe-area-inset-top) + 200rpx); 
}

.quest-item {
  margin-bottom: 24rpx;
  border-bottom: 2rpx dashed rgba(0,0,0,0.05);
  padding-bottom: 20rpx;
}

.quest-title {
  font-size: 34rpx;
  margin-bottom: 8rpx;
  display: block;
}

.quest-subtitle {
  font-size: 24rpx;
}

/* --- 水墨点进度条 --- */
.progress-dots {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ddd; /* 默认未进行 (pending) */
  transition: all 0.3s;
}

.dot.completed {
  background-color: var(--ink-black); /* 已完成：黑色 */
}

.dot.active {
  background-color: var(--cinnabar-red); /* 当前：朱红色 */
  transform: scale(1.2);
}

.quest-daily {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  background-color: rgba(44, 44, 44, 0.03);
  padding: 16rpx;
  border-radius: 8rpx;
  color: var(--ink-light);
}

.bullet {
  color: var(--cinnabar-red);
  margin-right: 12rpx;
  font-size: 20rpx;
}

.footer-spacer {
  height: 200rpx; /* 为 TabBar 和 FAB 留白 */
}

/* --- 悬浮按钮 (优化版) --- */
.fab-container {
  position: absolute;
  bottom: 50rpx; /* 向下移动一点 */
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  pointer-events: none;
  z-index: 99;
}

.fab-btn {
  pointer-events: auto;
  background-color: var(--ink-black);
  color: var(--paper-bg);
  height: 88rpx;
  padding: 0 40rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(44, 44, 44, 0.4);
  /* 去除默认 button 可能的边框 */
  border: none;
  transition: transform 0.1s;
}

.fab-btn:active {
  transform: scale(0.96);
}

.plus-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
  margin-top: -4rpx; /* 微调对齐 */
}

.fab-text {
  font-size: 30rpx;
  letter-spacing: 2rpx;
}
