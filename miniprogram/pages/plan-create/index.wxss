.header {
  padding: 60rpx 0 40rpx;
}

.title {
  font-size: 56rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  margin-top: 10rpx;
  display: block;
}

.divider {
  width: 60rpx;
  height: 4rpx;
  background-color: var(--cinnabar-red);
  margin: 20rpx auto 0;
  opacity: 0.8;
}

/* --- 类型选择 --- */
.type-selection {
  padding: 0 40rpx;
}

.selection-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start; /* 对齐顶部 */
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.selection-card.active {
  border-color: var(--cinnabar-red);
  background-color: rgba(255,255,255,0.8);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: var(--ink-black);
  color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.selection-card.active .card-icon {
  background-color: var(--cinnabar-red);
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  color: var(--ink-black);
}

.card-desc {
  font-size: 24rpx;
  line-height: 1.5;
}

.radio-circle {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
  margin-left: 20rpx;
  margin-top: 24rpx; /* 对齐标题 */
  position: relative;
}

.radio-circle.checked {
  border-color: var(--cinnabar-red);
}

.radio-circle.checked::after {
  content: '';
  position: absolute;
  top: 6rpx; left: 6rpx; right: 6rpx; bottom: 6rpx;
  background-color: var(--cinnabar-red);
  border-radius: 50%;
}

.footer-btn {
  margin-top: 80rpx;
  text-align: center;
}

/* --- 表单样式 --- */
.form-content {
  padding: 0 60rpx;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 60rpx;
}

.form-title {
  font-size: 40rpx;
  color: var(--ink-black);
}

.back-link {
  font-size: 24rpx;
  text-decoration: underline;
}

.form-item {
  margin-bottom: 60rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  color: var(--ink-black);
}

.label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-row .label {
  margin-bottom: 0;
}

.clear-btn {
  font-size: 24rpx;
  text-decoration: underline;
}

.input, .picker {
  border-bottom: 2rpx solid var(--ink-black);
  padding: 10rpx 0;
  font-size: 36rpx;
  height: 60rpx;
}

/* 预设天数按钮 */
.preset-days {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.preset-btn {
  padding: 10rpx 24rpx;
  background-color: rgba(0,0,0,0.05);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: var(--ink-gray);
  transition: all 0.2s;
}

.preset-btn.active {
  background-color: var(--ink-black);
  color: #fff;
}

.helper-text {
  font-size: 24rpx;
  margin-top: 20rpx;
  display: block;
}

.highlight {
  color: var(--cinnabar-red);
  font-weight: bold;
}

.btn-area {
  margin-top: 100rpx;
  text-align: center;
}

.loading-area {
  margin-top: 200rpx;
}
