.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* --- 固定头部 --- */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: var(--paper-bg);
  padding-top: env(safe-area-inset-top);
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  background-image: var(--paper-texture); 
}

.header-content {
  padding: 20rpx 40rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.subtitle {
  font-size: 24rpx;
  margin-bottom: 8rpx;
  letter-spacing: 2rpx;
  color: var(--ink-gray);
}

.title {
  font-size: 56rpx;
  color: var(--ink-black);
  margin-bottom: 16rpx;
}

.ink-line {
  width: 60rpx;
  height: 6rpx;
  background-color: var(--cinnabar-red);
  border-radius: 4rpx;
  opacity: 0.9;
}

.plans-scroll {
  flex: 1;
  height: 0; /* 配合 flex: 1 实现滚动 */
  padding-top: calc(env(safe-area-inset-top) + 200rpx); /* 为固定头部留出空间 */
}

.plans-list {
  padding-bottom: 40rpx;
}

.plan-section {
  margin-bottom: 20rpx;
  padding-top: 40rpx;
}

.plan-header {
  padding: 0 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.plan-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--ink-black);
}

.plan-days {
  font-size: 24rpx;
}

/* --- 横向滚动时间轴 --- */
.chapter-scroll {
  width: 100%;
  height: 380rpx; /* 增加高度防止底部边框/阴影被裁剪 */
}

.timeline-container {
  display: flex;
  align-items: center;
  padding: 0 40rpx 20rpx; /* 增加底部 padding */
  height: 100%;
  position: relative;
  min-width: max-content;
  width: max-content;
}

.timeline-line {
  position: absolute;
  left: 40rpx;
  right: 40rpx; /* 贯穿整个容器 */
  top: 50rpx; /* 调整位置与点对齐 */
  height: 4rpx;
  background-image: linear-gradient(to right, var(--ink-black) 50%, transparent 50%);
  background-size: 20rpx 100%;
  opacity: 0.2;
  z-index: 0;
  width: calc(100% - 80rpx); /* 确保宽度正确 */
}

.chapter-item {
  margin-right: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
  width: 220rpx;
  flex-shrink: 0;
}

.spacer {
  width: 40rpx;
  flex-shrink: 0;
}

.connection-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 4rpx solid var(--ink-gray);
  margin-bottom: 30rpx; /* 距离卡片的距离 */
  z-index: 2;
  position: absolute;
  top: 50rpx; /* 与线对齐 */
  transform: translateY(-50%);
}

.connection-dot.filled {
  background-color: var(--ink-black);
  border-color: var(--ink-black);
}

.connection-dot.pulsing {
  border-color: var(--cinnabar-red);
  background-color: var(--cinnabar-red);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { box-shadow: 0 0 0 0 rgba(178, 34, 34, 0.4); }
  70% { box-shadow: 0 0 0 10rpx rgba(178, 34, 34, 0); }
  100% { box-shadow: 0 0 0 0 rgba(178, 34, 34, 0); }
}

.chapter-card {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border: 2rpx solid rgba(0,0,0,0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx; /* 给线和点留出空间 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  transition: all 0.3s;
}

.chapter-card.ongoing {
  border: 4rpx solid var(--cinnabar-red); /* 强制显示红色边框 */
  background-color: rgba(255,255,255,0.9);
  transform: scale(1.05);
  box-shadow: 0 8rpx 20rpx rgba(178, 34, 34, 0.1);
}

.chapter-card.locked {
  background-color: rgba(0,0,0,0.02);
  opacity: 0.6;
}

.chapter-num {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: var(--ink-black);
}

.chapter-status-text {
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.chapter-rate {
  font-size: 20rpx;
}

/* --- 分割线 --- */
.plan-divider {
  height: 2rpx;
  background-color: rgba(0,0,0,0.05);
  margin: 40rpx 40rpx 0;
}

.footer-spacer {
  height: 200rpx; /* 增加底部留白，防止被固定按钮遮挡 */
}

/* --- 悬浮按钮 (复用首页样式) --- */
.fab-container {
  position: absolute;
  bottom: 50rpx; /* 向下移动一点 */
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  pointer-events: none;
  z-index: 99;
}

.fab-btn {
  pointer-events: auto;
  background-color: var(--ink-black);
  color: var(--paper-bg);
  height: 88rpx;
  padding: 0 40rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(44, 44, 44, 0.4);
  /* 去除默认 button 可能的边框 */
  border: none;
  transition: transform 0.1s;
}

.fab-btn:active {
  transform: scale(0.96);
}

.plus-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
  margin-top: -4rpx; /* 微调对齐 */
}

.fab-text {
  font-size: 30rpx;
  letter-spacing: 2rpx;
}
