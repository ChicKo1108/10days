.container {
  padding: 60rpx 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.profile-header {
  margin-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}

.avatar {
  width: 100%;
  height: 100%;
}

.info-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nickname {
  font-size: 48rpx;
  color: var(--ink-black);
  margin-bottom: 12rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.bio {
  font-size: 26rpx;
  letter-spacing: 1rpx;
  opacity: 0.8;
}

.settings-list {
  margin-bottom: 60rpx;
  width: 100%;
}

/* 简约水墨卡片风格 */
.ink-card {
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 4rpx;
  padding: 10rpx 30rpx;
  border: 2rpx solid rgba(0,0,0,0.03);
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 10rpx;
  position: relative;
}

.list-item:active {
  opacity: 0.7;
}

.item-text {
  font-size: 32rpx;
  color: var(--ink-black);
  letter-spacing: 2rpx;
}

.item-text.text-red {
  color: var(--cinnabar-red);
}

.item-arrow {
  font-size: 28rpx;
  font-weight: bold;
  opacity: 0.5;
}

.item-arrow.text-red {
  color: var(--cinnabar-red);
  opacity: 0.8;
}

.divider {
  height: 2rpx;
  background-color: rgba(0,0,0,0.05);
  margin: 0 10rpx;
  width: calc(100% - 20rpx);
}

.footer-info {
  text-align: center;
  font-size: 22rpx;
  opacity: 0.4;
  margin-top: auto;
  padding-bottom: 20rpx;
  letter-spacing: 2rpx;
}
