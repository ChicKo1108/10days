.header {
  padding: 60rpx 0 20rpx;
}

.title {
  font-size: 48rpx;
  letter-spacing: 4rpx;
}

.divider {
  width: 60rpx;
  height: 4rpx;
  background-color: var(--ink-black);
  margin: 20rpx auto 0;
  opacity: 0.2;
}

.content {
  flex: 1;
  padding: 20rpx 40rpx;
}

.score-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  position: relative;
  overflow: hidden;
}

.score-circle {
  position: relative;
  z-index: 2;
}

.score-val {
  font-size: 100rpx;
  font-weight: bold;
}

.score-total {
  font-size: 32rpx;
}

.score-label {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--ink-gray);
  z-index: 2;
}

.seal-anim {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 160rpx;
  height: 160rpx;
  border: 6rpx solid rgba(178, 34, 34, 0.1);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
  animation: stampFall 0.8s 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  opacity: 0;
}

.seal-text {
  font-size: 60rpx;
  color: rgba(178, 34, 34, 0.1);
  font-weight: bold;
}

/* 动画完成后变为实色 (通常配合 JS class 切换，这里简化模拟) */
.seal-anim {
  border-color: var(--cinnabar-red);
}
.seal-anim .seal-text {
  color: var(--cinnabar-red);
}

.review-section {
  margin-top: 60rpx;
}

.section-title {
  font-size: 36rpx;
  margin-bottom: 30rpx;
  color: var(--ink-light);
}

.icon {
  font-size: 60rpx;
  color: rgba(0,0,0,0.1);
  margin-right: 10rpx;
  vertical-align: middle;
}

.note-item {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx dashed rgba(0,0,0,0.05);
}

.note-day {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.note-text {
  font-size: 30rpx;
  line-height: 1.6;
}

.footer {
  padding: 40rpx;
  text-align: center;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}
